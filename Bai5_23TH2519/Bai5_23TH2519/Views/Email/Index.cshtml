@model Bai5_23TH2519.Models.EmailModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <h2>EMAIL FUNCTION</h2>

    @using (Html.BeginForm("Index", "Email", FormMethod.Post))
    {
        <div>
            <label for="From">Send From email:</label>
            @Html.TextBoxFor(m => m.From, new { @class = "form-control" })
        </div>

        <br />

        <div>
            <label for="Password">Password:</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <br />

        <div>
            <label for="To">To email:</label>
            @Html.TextBoxFor(m => m.To, new { @class = "form-control" })
        </div>

        <br />

        <div>
            <label for="Subject">Subject:</label>
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
        </div>

        <br />

        <div>
            <label for="Body">Content mail:</label>
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
        </div>
        <br />
        <div>
            <br />
            <input type="submit" value="Gửi email" class="btn btn-primary" />
        </div>



        <br />




        if (ViewBag.Message != null)
        {
            <div class="jumbotron">
                <h1 class="text-danger">ALERT FROM SERVER</h1>
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <div>
                        @ViewBag.Message
                    </div>
                </div>
            </div>
        }

    }
</main>